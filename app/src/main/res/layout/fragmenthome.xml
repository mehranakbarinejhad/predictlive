<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
    <View

        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/sectiononehomegradint"
        android:id="@+id/section1"
        />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/loginlogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mehran_akbari"
            android:fontFamily="@font/andalus"
            android:textColor="#FFF"
            android:textSize="22sp"
            android:layout_below="@id/img_user"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"/>



    <View
        android:id="@+id/framrankandscore"
        android:layout_width="310dp"
        android:layout_below="@id/section1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_height="200dp"/>

    <View
        android:id="@+id/veiwscore"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/section1"
        android:background="@drawable/gradintscoreandrank"
        android:layout_alignLeft="@id/framrankandscore"
        />
    <View
        android:id="@+id/viewrank"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_below="@id/section1"
        android:layout_alignRight="@id/framrankandscore"
        android:background="@drawable/gradintscoreandrank"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/veiwscore"
        android:layout_marginLeft="10dp"

        />
    <View
        android:id="@+id/shapescore"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/scoreshape"
        android:layout_alignTop="@id/veiwscore"
        android:layout_alignLeft="@id/veiwscore"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#5A5858"
        android:gravity="center"


        android:textSize="25sp"
        android:fontFamily="@font/bernard"
        android:layout_alignStart="@id/shapescore"
        android:layout_alignTop="@id/shapescore"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="50dp"
        />

    <View
        android:id="@+id/shapesrank"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/rankshape"
        android:layout_alignTop="@id/viewrank"
        android:layout_alignLeft="@id/viewrank"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#5A5858"
        android:gravity="center"
        android:text="@string/_1"
        android:textSize="25sp"
        android:fontFamily="@font/bernard"
        android:layout_alignStart="@id/shapesrank"
        android:layout_alignTop="@id/shapesrank"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="50dp"
        />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/andalus"
                android:layout_marginTop="10sp"
                android:text="@string/score"
                android:textColor="#FFF"
                android:textSize="30sp"
                android:layout_alignBottom="@id/veiwscore"
                android:layout_alignLeft="@id/veiwscore"
                android:layout_marginLeft="45dp"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/andalus"
                android:layout_marginTop="10sp"
                android:text="@string/rank"
                android:textColor="#FFF"
                android:textSize="30sp"
                android:layout_alignBottom="@id/viewrank"
                android:layout_alignLeft="@id/viewrank"
                android:layout_marginLeft="45dp"

                />



</RelativeLayout
    >