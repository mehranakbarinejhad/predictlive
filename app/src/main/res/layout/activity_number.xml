<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
android:id="@+id/numberactivity_parent"
    android:background="@drawable/logingradint"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal">
            <View
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/loginlogo"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:text="@string/l"
                android:fontFamily="@font/simsun"
                android:layout_marginTop="35sp"
                android:layout_gravity="center_horizontal"
                android:textSize="90sp"
                />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/live_predict"
            android:textSize="22sp"
            android:fontFamily="@font/andalus"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textColor="#C6CBD4"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_flag"
                android:layout_width="45dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:src="@drawable/iranflag"
                android:scaleType="fitXY"
                android:contentDescription="@string/todo" />
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:hint="@string/_98"
                style="@style/myEditText"
                android:backgroundTint="#5E6A7B"
                android:layout_marginStart="5dp"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_phonenumber_numberactivity"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:maxLength="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
                android:backgroundTint="#5E6A7B"
                android:hint="@string/phone_number"
                style="@style/myEditText"
                android:layout_marginStart="5dp"/>

        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next_numberactivity"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="@string/next"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/loginbutton"
            android:textColor="#FFF"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"

        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_loginaccounttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/andalus"
            android:textColor="#9CA0A7"
            android:layout_marginTop="10dp"
            android:text="@string/do_have_an_account"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/txt_loginclick_numberactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/txt_loginaccounttext"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            android:text="@string/login"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/andalus"
            android:textColor="#E10D0D"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>
