<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/messageshape"
    android:orientation="vertical">
        <ImageView
                android:id="@+id/img_message"
            android:layout_width="40dp"
            android:layout_height="40dp"
                android:src="@drawable/ic_warning"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/todo" />
        <TextView
                android:id="@+id/txt_titrmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/titr"
                android:textSize="20sp"
                android:text="@string/warning"
                android:layout_gravity="center"
                android:textColor="#111"/>
        <TextView
                android:id="@+id/txt_textmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/bmitra"
                android:textSize="19sp"
            android:gravity="center"
            android:layout_marginEnd="2dp"
            android:layout_margin="8dp"
            android:padding="8dp"
                android:text="@string/please_enter_username"
                android:layout_gravity="end"

                android:textColor="#151515"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
                android:background="#514E4E"/>
        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:text="@string/done"
            android:textSize="22sp"
                        android:fontFamily="@font/bernard"
                android:textColor="#090909"
                android:textAllCaps="false"
                android:background="@android:color/transparent"
                android:layout_marginTop="5dp"/>


</LinearLayout>